    <!-- Scripts -->
    <script src="../../assets/js/microinteractions.js"></script>
    <script>
        // Cambio periodo
        function changePeriod(period) {
            const url = new URL(window.location);
            url.searchParams.set('periodo', period);
            window.location.href = url.toString();
        }
        
        // Mostra modal sessioni
        function showSessionsModal() {
            const modal = document.getElementById('sessionsModal');
            const content = document.getElementById('sessionsContent');
            
            content.innerHTML = '<div style="text-align: center; padding: 2rem;">Caricamento...</div>';
            modal.classList.add('active');
            
            // Carica sessioni
            fetch(`sessions_data.php?id=<?= $operatoreId ?>&periodo=<?= $periodo ?>`)
                .then(response => response.text())
                .then(html => {
                    content.innerHTML = html;
                })
                .catch(error => {
                    content.innerHTML = '<div style="text-align: center; color: var(--danger-red);">Errore nel caricamento</div>';
                });
        }
        
        // Chiudi modal
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }
        
        // Chiudi modal cliccando fuori
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal-overlay')) {
                e.target.classList.remove('active');
            }
        });
        
        // Animazioni progress bar
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0%';
                setTimeout(() => {
                    bar.style.width = width;
                }, 500);
            });
        });
        
        // Auto-refresh indicatori sessione attiva ogni 30 secondi
        setInterval(() => {
            fetch(window.location.href)
                .then(response => response.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const newStatus = doc.querySelector('.status-indicator');
                    const currentStatus = document.querySelector('.status-indicator');
                    
                    if (newStatus && currentStatus) {
                        currentStatus.className = newStatus.className;
                        currentStatus.innerHTML = newStatus.innerHTML;
                    }
                })
                .catch(error => console.log('Auto-refresh error:', error));
        }, 30000);
    </script>
