/**
 * modules/operatori/view.php - Dettagli Operatore CRM Re.De Consulting
 * 
 * Dashboard completa per singolo operatore con:
 * - Statistiche dettagliate performance
 * - Cronologia sessioni lavoro
 * - Analisi produttivit√†
 * - Gestione task assegnati
 */

// Avvia sessione se non gi√† attiva
if (session_status() === PHP_SESSION_NONE) {
    session_start();
}

// Percorsi assoluti per evitare problemi
require_once $_SERVER['DOCUMENT_ROOT'] . '/crm/core/classes/Database.php';
require_once $_SERVER['DOCUMENT_ROOT'] . '/crm/core/auth/AuthSystem.php';
require_once $_SERVER['DOCUMENT_ROOT'] . '/crm/core/functions/helpers.php';


// Verifica autenticazione
if (!AuthSystem::isAuthenticated()) {
    header('Location: /crm/core/auth/login.php');
    exit;
}

$sessionInfo = AuthSystem::getSessionInfo();
$db = Database::getInstance();

// Recupera ID operatore
$operatoreId = $_GET['id'] ?? null;
if (!$operatoreId) {
    header('Location: /crm/modules/operatori/?error=missing_id');
    exit;
}

// Recupera dati operatore
$operatore = $db->selectOne("SELECT * FROM operatori WHERE id = ?", [$operatoreId]);
if (!$operatore) {
    header('Location: /crm/modules/operatori/?error=not_found');
    exit;
}

// Controllo permessi: admin o auto-view
$canView = $sessionInfo['is_admin'] || $sessionInfo['operatore_id'] == $operatoreId;
if (!$canView) {
    header('Location: /crm/modules/operatori/?error=permissions');
    exit;
}

$isAdmin = $sessionInfo['is_admin'];
$isSelfView = $sessionInfo['operatore_id'] == $operatoreId;

// Decode qualifiche
$qualifiche = json_decode($operatore['qualifiche'] ?? '[]', true) ?: [];

// Periodo per analisi (default: ultimo mese)
$periodo = $_GET['periodo'] ?? '30';
$dataInizio = date('Y-m-d', strtotime("-$periodo days"));

// Sessioni lavoro nel periodo
$sessioni = $db->select(
    "SELECT * FROM sessioni_lavoro 
     WHERE operatore_id = ? 
     AND login_timestamp >= ? 
     ORDER BY login_timestamp DESC",
    [$operatoreId, $dataInizio]
);

// Statistiche generali
$stats = $db->selectOne(
    "SELECT 
        COUNT(DISTINCT sl.id) as totale_sessioni,
        COALESCE(SUM(sl.ore_effettive), 0) as ore_totali,
        COALESCE(SUM(sl.ore_extra), 0) as ore_extra,
        COALESCE(AVG(sl.ore_effettive), 0) as media_ore_giorno,
        COUNT(DISTINCT DATE(sl.login_timestamp)) as giorni_lavorati,
        MAX(sl.login_timestamp) as ultimo_accesso,
        MIN(sl.login_timestamp) as primo_accesso_periodo
     FROM sessioni_lavoro sl
     WHERE sl.operatore_id = ? 
     AND sl.login_timestamp >= ?",
    [$operatoreId, $dataInizio]
);

// Task assegnati e completati
$taskStats = $db->selectOne(
    "SELECT 
        COUNT(*) as task_totali,
        SUM(CASE WHEN stato = 'completato' THEN 1 ELSE 0 END) as task_completati,
        SUM(CASE WHEN data_scadenza < CURDATE() AND stato != 'completato' THEN 1 ELSE 0 END) as task_scaduti,
        COALESCE(SUM(ore_lavorate), 0) as ore_task_totali
     FROM task 
     WHERE operatore_assegnato_id = ?",
    [$operatoreId]
);

// Task in corso
$taskInCorso = $db->select(
    "SELECT t.*, c.ragione_sociale,
            CASE 
                WHEN p.id IS NOT NULL THEN s1.nome 
                ELSE s2.nome 
            END as settore_nome,
            CASE 
                WHEN p.id IS NOT NULL THEN s1.colore_hex 
                ELSE s2.colore_hex 
            END as colore_hex
     FROM task t
     LEFT JOIN clienti c ON t.cliente_id = c.id
     LEFT JOIN pratiche p ON t.pratica_id = p.id
     LEFT JOIN settori s1 ON p.settore_id = s1.id
     LEFT JOIN adempimenti a ON t.adempimento_id = a.id
     LEFT JOIN settori s2 ON a.settore_id = s2.id
     WHERE t.operatore_assegnato_id = ? 
     AND t.stato IN ('da_iniziare', 'in_corso')
     ORDER BY t.data_scadenza ASC
     LIMIT 10",
    [$operatoreId]
);

// Appuntamenti prossimi
$appuntamenti = $db->select(
    "SELECT a.*, c.ragione_sociale
     FROM appuntamenti a
     LEFT JOIN clienti c ON a.cliente_id = c.id
     WHERE a.operatore_id = ? 
     AND a.data_appuntamento >= CURDATE()
     AND a.stato = 'programmato'
     ORDER BY a.data_appuntamento ASC, a.ora_inizio ASC
     LIMIT 5",
    [$operatoreId]
);

// Tracking attivit√† recenti
$trackingRecente = $db->select(
    "SELECT tt.*, t.titolo as task_titolo, c.ragione_sociale
     FROM tracking_task tt
     LEFT JOIN task t ON tt.task_id = t.id
     LEFT JOIN clienti c ON t.cliente_id = c.id
     WHERE tt.operatore_id = ?
     ORDER BY tt.ora_inizio DESC
     LIMIT 10",
    [$operatoreId]
);

// Modalit√† lavoro pi√π utilizzata
$modalitaStats = $db->select(
    "SELECT modalita_lavoro, COUNT(*) as count
     FROM sessioni_lavoro 
     WHERE operatore_id = ? 
     AND login_timestamp >= ?
     GROUP BY modalita_lavoro",
    [$operatoreId, $dataInizio]
);

// Preparazione dati per grafici
$sessioniPerGiorno = [];
foreach ($sessioni as $sessione) {
    $giorno = date('Y-m-d', strtotime($sessione['login_timestamp']));
    if (!isset($sessioniPerGiorno[$giorno])) {
        $sessioniPerGiorno[$giorno] = [
            'data' => $giorno,
            'ore' => 0,
            'sessioni' => 0
        ];
    }
    $sessioniPerGiorno[$giorno]['ore'] += floatval($sessione['ore_effettive'] ?? 0);
    $sessioniPerGiorno[$giorno]['sessioni']++;
}

// Calcoli aggiuntivi
$efficienzaPercentuale = $stats['ore_totali'] > 0 ? 
    round((($stats['ore_totali'] - $stats['ore_extra']) / $stats['ore_totali']) * 100, 1) : 0;

$completionRate = $taskStats['task_totali'] > 0 ? 
    round(($taskStats['task_completati'] / $taskStats['task_totali']) * 100, 1) : 0;
?>
