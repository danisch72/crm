// Avvia sessione se non gi√† attiva
if (session_status() === PHP_SESSION_NONE) {
    session_start();
}

// Verifica che siamo passati dal router
if (!defined('CLIENTI_ROUTER_LOADED')) {
    header('Location: /crm/?action=clienti');
    exit;
}

// Variabili gi√† disponibili dal router
$isAdmin = $sessionInfo['is_admin'];

// Query principale clienti
try {
    // Statistiche generali
    $statsGenerali = $db->query("
        SELECT 
            COUNT(*) as totale,
            COUNT(CASE WHEN stato = 'attivo' THEN 1 END) as attivi,
            COUNT(CASE WHEN stato = 'sospeso' THEN 1 END) as sospesi,
            COUNT(CASE WHEN stato = 'chiuso' THEN 1 END) as chiusi,
            COUNT(CASE WHEN tipologia_azienda = 'individuale' THEN 1 END) as individuali,
            COUNT(CASE WHEN tipologia_azienda != 'individuale' THEN 1 END) as societa
        FROM clienti
    ")->fetch();

    // Lista clienti
    $query = "
        SELECT 
            c.*,
            CONCAT(o.nome, ' ', o.cognome) as operatore_responsabile_nome,
            (SELECT COUNT(*) FROM pratiche WHERE cliente_id = c.id) as totale_pratiche,
            (SELECT COUNT(*) FROM pratiche WHERE cliente_id = c.id AND stato = 'in_corso') as pratiche_attive,
            (SELECT MAX(data_comunicazione) FROM comunicazioni WHERE cliente_id = c.id) as ultima_comunicazione
        FROM clienti c
        LEFT JOIN operatori o ON c.operatore_responsabile_id = o.id
        ORDER BY c.ragione_sociale ASC
    ";
    
    $clienti = $db->query($query)->fetchAll();
    
} catch (Exception $e) {
    error_log("Errore caricamento clienti: " . $e->getMessage());
    $clienti = [];
    $statsGenerali = ['totale' => 0, 'attivi' => 0, 'sospesi' => 0, 'individuali' => 0, 'societa' => 0];
}

// Funzioni helper
function getStatusIcon($stato) {
    switch ($stato) {
        case 'attivo': return 'üü¢';
        case 'sospeso': return 'üü°';
        case 'chiuso': return 'üî¥';
        default: return '‚ö™';
    }
}

function getTipologiaIcon($tipologia) {
    switch ($tipologia) {
        case 'individuale': return 'üë§';
        case 'srl': return 'üè¢';
        case 'spa': return 'üè≠';
        case 'snc': return 'üë•';
        case 'sas': return 'ü§ù';
        default: return 'üìã';
    }
}
