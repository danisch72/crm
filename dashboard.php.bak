        }, 300000);

        // Animazione contatori
        document.querySelectorAll('.stat-value').forEach(element => {
            const value = parseInt(element.textContent);
            if (!isNaN(value)) {
                let current = 0;
                const increment = value / 20;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= value) {
                        current = value;
                        clearInterval(timer);
                    }
                    element.textContent = Math.floor(current);
                }, 50);
            }
        });
    </script>
